<!-- Razorpay Checkout -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  function buyNow(event, name, price, img){
    event.stopPropagation();
    var options = {
      "key": "YOUR_RAZORPAY_KEY_ID", // তোমার Razorpay Key ID
      "amount": price*100, // Price in paise
      "currency": "INR",
      "name": name,
      "description": "Purchase from NayanBazigaar",
      "image": img,
      "handler": function (response){
          alert("Payment Successful! Payment ID: " + response.razorpay_payment_id);
      },
      "prefill": {
          "name": "",
          "email": "",
          "contact": ""
      },
      "theme": {
          "color": "#3399cc"
      }
    };
    var rzp1 = new Razorpay(options);
    rzp1.open();
  }

  function openProduct(name,img,price){
    var html = `
      <div style="text-align:center;padding:50px;">
        <h2>${name}</h2>
        <img src="${img}" style="max-width:300px;border-radius:10px;">
        <p>Price: ₹${price}</p>
        <button onclick="buyNow(event,'${name}',${price},'${img}')">Buy Now</button>
        <br><br>
        <button onclick="location.reload()">Back to Shop</button>
      </div>
    `;
    document.body.innerHTML = html;
  }
</script>

